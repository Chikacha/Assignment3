<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td>
        <% post.categories.each do |category|%>
          <%= category.title %>&nbsp;
        <% end %>
        </td>
        <td class="btn btn-info"><%= link_to 'Show', post %></td>
        <td class="btn btn-warning"><%= link_to 'Edit', edit_post_path(post) %></td>
        <td class="btn btn-danger"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
